@using FuncionarioCadastroWeb.ViewModels
@model IEnumerable<FuncionarioViewModel>

@{
    ViewData["Title"] = "Lista de Funcionários";
}

<h1>Lista de Funcionários</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Cadastrar Novo Funcionário</a>
</p>

<!-- Filtros de Pesquisa -->
<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-2">
        <div class="col-md-3">
            <input type="text" name="searchNome" class="form-control" placeholder="Pesquisar por Nome" value="@Context.Request.Query["searchNome"]" />
        </div>
        <div class="col-md-3">
            <input type="text" name="searchCPF" class="form-control" placeholder="Pesquisar por CPF" value="@Context.Request.Query["searchCPF"]" />
        </div>
        <div class="col-md-3">
            <input type="text" name="searchProfissao" class="form-control" placeholder="Pesquisar por Profissão" value="@Context.Request.Query["searchProfissao"]" />
        </div>
        <div class="col-md-3">
            <input type="text" name="searchUF" class="form-control" placeholder="Pesquisar por UF" value="@Context.Request.Query["searchUF"]" />
        </div>
        <div class="col-md-12 mt-2">
            <button type="submit" class="btn btn-primary">Pesquisar</button>
            <a asp-action="Index" class="btn btn-secondary">Limpar</a>
        </div>
    </div>
</form>

<!-- Tabela de Funcionários -->
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>Data de Nascimento</th>
            <th>Profissão</th>
            <th>UF</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var f in Model)
            {
                <tr>
                    <td>@f.Id</td>
                    <td>@f.Nome</td>
                    <td>@f.CPF</td>
                    <td>@f.DataNascimento.ToString("dd/MM/yyyy")</td>
                    <td>@f.Profissao</td>
                    <td>@f.UF</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@f.Id" class="btn btn-sm btn-warning me-1">Editar</a>
                        <a asp-action="Details" asp-route-id="@f.Id" class="btn btn-sm btn-info me-1">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@f.Id" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Nenhum funcionário encontrado.</td>
            </tr>
        }
    </tbody>
</table>
