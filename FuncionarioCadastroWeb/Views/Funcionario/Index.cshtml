@using FuncionarioCadastroWeb.ViewModels
@model IEnumerable<FuncionarioViewModel>

@{
    ViewData["Title"] = "Lista de Funcionários";
}

<h1>Lista de Funcionários</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Cadastrar Novo Funcionário</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>CPF</th>
            <th>Data de Nascimento</th>
            <th>Profissão</th>
            <th>UF</th>
            @* <th>CNH</th>
            <th>CTPS</th>
            <th>Cursos</th>
            <th>Endereços</th> *@
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var f in Model)
        {
            <tr>
                <td>@f.Nome</td>
                <td>@f.CPF</td>
                <td>@f.DataNascimento.ToShortDateString()</td>
                <td>@f.Profissao</td>
                <td>@f.UF</td>
                @* <td>
                    @if (f.CNH != null)
                    {
                        @($"{f.CNH.CNH} - {f.CNH.Categoria}")
                    }
                </td>
                <td>
                    @if (f.CTPS != null)
                    {
                        @($"{f.CTPS.CTPS} - {f.CTPS.Tipo}")
                    }
                </td>
                <td>
                    @if (f.Curso != null && f.Curso.Count > 0)
                    {
                        <ul>
                            @foreach (var c in f.Curso)
                            {
                                <li>@c.Curso (@c.TipoCurso)</li>
                            }
                        </ul>
                    }
                </td>
                <td>
                    @if (f.Endereco != null && f.Endereco.Count > 0)
                    {
                        <ul>
                            @foreach (var e in f.Endereco)
                            {
                                <li>@e.Logradouro, @e.Numero - @e.Bairro, @e.Cidade - CEP: @e.CEP</li>
                            }
                        </ul>
                    }
                </td> *@
                <td>
                    <a asp-action="Edit" asp-route-id="@f.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@f.Id" class="btn btn-sm btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@f.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>